@using ConfProgram.Components
@inherits LayoutComponentBase

<PageTitle>ConfProgram</PageTitle>

<!-- Обёртка всей страницы: класс меняется в зависимости от состояния сайдбара -->
<div class="page-layout">

    <!-- Сайдбар с бургером, передаёт callback в layout -->
    <SidebarMenu OnToggleSidebar="SetSidebarState" />

    <!-- Основной контент -->
    <main>
        <div class="top-row">
            <div class="breadcrumb-wrapper">
                <Breadcrumb />
            </div>
        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

@code {
    // Состояние сайдбара
    private bool isSidebarVisible = true;

    // Метод, вызываемый из SidebarMenu
    public void SetSidebarState(bool visible)
    {
        isSidebarVisible = visible;
        StateHasChanged(); // гарантируем обновление разметки
    }
}
